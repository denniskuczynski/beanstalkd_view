<!doctype html>

<html>
  <head>
    <title>Beanstalkd View - <%= BeanstalkdView::VERSION %></title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <%= css :application, :media => 'screen' %>
	<%= js  :application %>    
  </head>
  <body>
	<!-- Header -->
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
			<a class="brand" href="<%= u("/") %>">Beanstalkd View - <%= BeanstalkdView::VERSION %></a>
		</div>
	  </div>
	</div>
	
	<div class="container">
		
		<% message = notice_message %>
		<% if message and not message.empty? %>
			<div id='flash' class='notice'>
				<div class="row">
					<div class="span12">
						<div class="alert alert-success">
						 <h4 class="alert-heading">Notice:</h4>
						  <%= message %>
						</div>
					</div>
				</div>		
			</div>
		<% end %>
		
		<%= yield %>


		<!-- Footer -->
		<div class="row">
			<div class="span12"><hr/></div>
		</div>		
		<div class="row">
 		  <div class="span4">&nbsp;</div>
		  <div class="span4">
		      Powered by <a href="http://github.com/denniskuczynski/beanstalkd_view">Beanstalkd View</a>
		  </div>
 		  <div class="span4">&nbsp;</div>
		</div>
	</div>
  </body>
</html>